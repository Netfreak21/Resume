<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lokesh.keepmemanaged.Sign_up">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/lin1"
                        android:background="@drawable/gradientbackground1"
                        android:orientation="vertical">
                        
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/circle"
                            android:src="@drawable/assign"
                            android:padding="10dp"/>
                        <TextView
                            android:textColor="#fff"
                            android:layout_marginBottom="20dp"

                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:text="REGISTER"
                            android:fontFamily="sans-serif-medium"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="20dp"
                        android:id="@+id/imv1"
                        android:layout_below="@id/lin1"
                        android:layout_height="20dp"
                        android:rotation="45"
                        android:layout_marginTop="-10dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/square"
                         />
                    <RelativeLayout
                        android:id="@+id/rl1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_below="@id/imv1">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:id="@+id/imu"
                            app:srcCompat="@drawable/ic_person_black_24dp"
                            android:tint="#fff"
                            android:background="@drawable/gradientbackground1"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignBaseline="@+id/imu"
                            android:background="#e2dddd"
                            android:singleLine="true"
                            android:id="@+id/et1"
                            android:layout_toRightOf="@id/imu"
                            android:hint="Username"
                            android:paddingLeft="20dp"
                            android:textSize="20sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_below="@id/rl1">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:id="@+id/ime"
                            app:srcCompat="@drawable/ic_drafts_black_24dp"
                            android:tint="#fff"
                            android:background="@drawable/gradientbackground1"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignBaseline="@+id/ime"
                            android:background="#e2dddd"
                            android:layout_toRightOf="@id/ime"
                            android:hint="Email"
                            android:id="@+id/email"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="20dp"
                            android:textSize="20sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_below="@id/rl2">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:id="@+id/imp"
                            app:srcCompat="@drawable/ic_vpn_key_black_24dp"
                            android:tint="#fff"
                            android:background="@drawable/gradientbackground1"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignBaseline="@+id/imp"
                            android:background="#e2dddd"
                            android:layout_toRightOf="@id/imp"
                            android:hint="Password"
                            android:singleLine="true"
                            android:id="@+id/password"
                            android:inputType="textPassword"
                            android:paddingLeft="20dp"
                            android:textSize="20sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_below="@id/rl3">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:id="@+id/imc"
                            app:srcCompat="@drawable/ic_assignment_black_24dp"
                            android:tint="#fff"
                            android:background="@drawable/gradientbackground1"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignBaseline="@+id/imc"
                            android:background="#e2dddd"
                            android:layout_toRightOf="@id/imc"
                            android:hint="College"
                            android:id="@+id/et2"
                            android:paddingLeft="20dp"
                            android:singleLine="true"
                            android:textSize="20sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_below="@id/rl4">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:id="@+id/imco"
                            app:srcCompat="@drawable/ic_library_books_black_24dp"
                            android:tint="#fff"
                            android:background="@drawable/gradientbackground1"/>
                        <Spinner
                            android:paddingLeft="20dp"
                            android:layout_toRightOf="@id/imco"
                            android:layout_width="match_parent"
                            android:background="#e2dddd"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignBaseline="@+id/imco"
                            android:id="@+id/spinner1"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_weight="1" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_below="@id/rl5">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:id="@+id/imcy"
                            app:srcCompat="@drawable/ic_format_list_numbered_black_24dp"
                            android:tint="#fff"
                            android:background="@drawable/gradientbackground1"/>
                        <Spinner
                            android:paddingLeft="20dp"
                            android:layout_toRightOf="@id/imcy"
                            android:layout_width="match_parent"
                            android:background="#e2dddd"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignBaseline="@+id/imcy"
                            android:id="@+id/spinner2"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_weight="1" />
                    </RelativeLayout>
                    <CheckBox
                        android:id="@+id/ch1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl6"
                        android:text="I agree to The terms of Service"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ch1"
                        android:background="@drawable/gradientbackground1"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="SIGN UP"
                        android:textColor="#fff"
                        android:id="@+id/bt"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bt"
                        android:text="Already a member? Login here"
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:onClick="back"
                        android:fontFamily="sans-serif"
                        android:background="@android:color/transparent"/>
                </RelativeLayout>
            </ScrollView>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>
